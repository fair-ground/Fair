<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!--
        An App Fair app is uniquely identified by the GitHub organization that
        owns the fork of the https://github.com/appfair/App.git base repository.
        The organizations name, in the form of 'Some-Word', will cause the app
        to be named "Some Word".
        You should manually edit the CFBundleName and CFBundleIdentifier to match
        your app's identifier, but if it is left as the default 'app.App-Org',
        then the App Fair integration phase will swap in the correct
        name for your organization, which will be included in the release build.
    -->

    <!-- the name of your app; must match your App-Org with a space for the hyphen -->
    <key>CFBundleName</key>
    <string>App Org</string>

    <!-- the bundle ID, which must be: "app.App-Org" with your app org name -->
    <key>CFBundleIdentifier</key>
    <string>app.App-Org</string>

    <!-- set the value to your app's category (e.g., games, music, developer-tools) -->
    <key>LSApplicationCategoryType</key>
    <string>public.app-category.utilities</string>

    <!-- the semantic release in the form MAJOR.MINOR.PATCH -->
    <!-- each App Fair integration must increase this value -->
    <key>CFBundleShortVersionString</key>
    <string>0.0.1</string>

    <!-- the monotonically non-decreasing build number -->
    <!-- each App Fair integration must increase this value -->
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Each key in Sandbox.entitlements must have a corresponding explanation here -->
    <key>FairUsage</key>
    <dict>
        <key>com.apple.security.files.user-selected.read-write</key>
        <string>This app needs to read and write files in order to…</string>

        <key>com.apple.security.network.client</key>
        <string>This app needs to access the network in order to…</string>
    </dict>

    <!-- Free & Fair, Forever -->
    <key>NSHumanReadableCopyright</key>
    <string>GNU Affero General Public License</string>

    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <key>UIDeviceFamily</key>
    <integer>2</integer>

    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>

    <key>LSMinimumSystemVersion</key>
    <string>$(MACOSX_DEPLOYMENT_TARGET)</string>


    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>
